<div class="card{% if variation %} card--{{ variation }}{% endif %} {% if class %}{{ class }}{% endif %}">

  {% if image_src %}
    {% include "@atoms/04-images/basic/basic.twig"
      with {
        "class": "card__image",
        "variation": "",
      }
    %}
  {% endif %}

  {% if title %}
    {% include "@atoms/02-text/00-headings/heading-1/heading-1.twig"
      with {
        "heading": title,
        "class": "card__title",
        "variation": "",
      }
    %}
  {% endif %}

  {% if body %}
    {% include "@atoms/02-text/text/01-paragraph/paragraph.twig"
      with {
        "text": body,
        "class": "card__body",
        "variation": "",
      }
    %}
  {% endif %}

</div>
